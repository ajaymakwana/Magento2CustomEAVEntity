<?php if ($block->displayBrands()) { ?>
    <?php $_brandCollection = $block->getBrandCollection(); ?>
    <?php if ($_brandCollection->count()) { ?>
    <div class="block related">
        <div class="block-title title">
            <strong id="block-relatedbrands-heading" role="heading" aria-level="2">
                <?php echo __('Related Brands') ?>
            </strong>
        </div>
        <ol class="block-content">
            <?php foreach ($_brandCollection as $_brand) { ?>
                <li class="item">
                    <a class="brand-item-link"
                       href="<?php echo $_brand->getBrandUrl() ?>">
                        <?php echo $block->escapeHtml($_brand->getTitle()); ?>
                    </a>
                </li>
            <?php } ?>
        </ol>
    </div>
    <?php } ?>
<?php } ?>